{
  "extends": "stylelint-config-sass-guidelines",
  "rules": {
    "indentation": [
      2,
      {
        "ignore": [
          "value"
        ]
      }
    ],
    "selector-max-id": 1,
    "selector-max-compound-selectors": 4,
    "selector-class-pattern": [
      "^[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
      {
        "message": "Selector should follow BEM (block__element--modifier)."
      }
    ]
  }
}
